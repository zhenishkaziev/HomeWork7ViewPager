<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SecondActivity">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <Button
        android:id="@+id/button_first"
        android:textSize="14sp"
        android:text="Next"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/item_two"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:textAllCaps="false"
        android:id="@+id/button_two"
        android:textSize="14sp"
        android:text="Next"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_buttons"
        android:layout_marginBottom="32dp"
        android:textColor="#494EED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_three"
        android:textSize="14sp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:text="Start"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/item_three"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_one"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#1A1C3A"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginLeft="46dp"
                    android:layout_marginTop="7dp"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:text="9:41"
                    android:layout_width="54dp"
                    android:layout_height="18dp"/>

                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="120dp"
                    android:text="Swiftza"
                    android:layout_width="70dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/description_des"
                    android:textSize="38sp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/white"
                    android:text="Digital Banking that works for you"
                    android:layout_width="175dp"
                    android:layout_height="225dp"/>

                <Button
                    android:id="@+id/get_started"
                    android:text="Get Strated "
                    android:textColor="#494EED"
                    android:textAllCaps="false"
                    android:background="@drawable/buton_getstarted"
                    android:layout_marginLeft="42dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="42dp"
                   app:layout_constraintTop_toBottomOf="@+id/description_des"
                    android:layout_width="132dp"
                    android:layout_height="40dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:background="#494EED"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>


        </RelativeLayout>

